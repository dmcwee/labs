{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location":{
            "type":"string"
        },
        "labTagValue": {
            "type":"string"
        },
        //"gatewaySubnetId":{
        //    "type":"string"
        //},
        "vNetName": {
            "type":"string"
        },
        "gatewayRange": {
            "type":"string"
        },
        "gatewayType": {
            "type": "string",
            "defaultValue": "Vpn",
            "allowedValues": [
                "Vpn",
                "ExpressRoute"
            ]
        },
        "vpnGatewayGeneration": {
            "type": "string",
            "defaultValue": "Generation1"
        },
        "vpnType": {
            "type": "string",
            "defaultValue": "RouteBased",
            "allowedValues": [
                "RouteBased",
                "PolicyBased"
            ]
        },
        "sku": {
            "type": "string",
            "defaultValue": "VpnGw1"
        },
        "gatewayCertName": {
            "type":"string",
            "defaultValue": ""
        },
        "gatewayCertData":{
            "type":"string",
            "defaultValue": ""
        }
    },
    "variables":{
        "gatewayName":"[concat(parameters('vNetName'), '-gateway')]",
        "publicIpName":"[concat(parameters('vNetName'), '-gw-pip')]",
        "clientAddressPool":"10.10.10.0/24",
        "gatewaySubnetName":"gatewaySubNet",

        "certObject":"[if(or(empty(parameters('gatewayCertName')), empty(parameters('gatewayCertData'))), json('[ ]'), createArray(createObject('name', parameters('gatewayCertName'), 'properties', createObject('publicCertData', parameters('gatewayCertData')))))]"
    },
    "resources":[
        {
            "name": "[variables('publicIpName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[parameters('location')]",
            "apiVersion": "2018-10-01",
            "dependsOn": [],
            "tags": {
                "displayName": "GatewayPublicIP",
                "Lab":"[parameters('labTagValue')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
                , "dnsSettings": {
                "domainNameLabel": "[toLower(variables('gatewayName'))]"
                }
            }
        },

        {
            "name": "linkedSubnet",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": ["Microsoft.Resources/deployments/linkedSubnetTemplate"],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/dmcwee/labs/dev/Common/subnet.json"
                },
                "parameters": {
                    "subnetName":{
                        "value":"[variables('gatewaySubnetName')]"
                    },
                    "vnetName":{
                        "value":"[concat(resourceGroup().name, '-vnet')]"
                    },
                    "subnetRange": {
                        "value": "[parameters('gatewayRange')]"
                    }
                }
            }
        },

        // {
        //     "type": "Microsoft.Network/virtualNetworks/subnets",
        //     "apiVersion": "2020-11-01",
        //     "name": "[concat(parameters('vnetName'), '/', variables('gatewaySubnetName'))]",
        //     "location":"[parameters('location')]",
        //     "dependsOn": [],
        //     "properties": {
        //         "addressPrefix": "[parameters('gatewayRange')]",
        //         "delegations": [],
        //         "privateEndpointNetworkPolicies": "Enabled",
        //         "privateLinkServiceNetworkPolicies": "Enabled"
        //     }
        // },

        {
            "apiVersion": "2019-04-01",
            "name": "[variables('gatewayName')]",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))]"
            ],
            "tags": {
                "Lab":"[parameters('labTagValue')]"
            },
            "properties": {
                "gatewayType": "[parameters('gatewayType')]",
                "ipConfigurations": [
                    {
                        "name": "default",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                //"id": "[reference('linkedSubnet').outputs.subnetId.value]"
                                "id": "[resourceId('Microsoft.Network/virtualNetwork/subnets', parameters('vnetName'), variables('gatewaySubnetName'))]"
                            },
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))]"
                            }
                        }
                    }
                ],
                "vpnType": "[parameters('vpnType')]",
                "vpnGatewayGeneration": "[parameters('vpnGatewayGeneration')]",
                "sku": {
                    "name": "[parameters('sku')]",
                    "tier": "[parameters('sku')]"
                },
                "vpnClientConfiguration": {
                    "vpnClientAddressPool": {
                        "addressPrefixes":["[variables('clientAddressPool')]"]
                    },
                    "vpnClientProtocols":["IkeV2"],
                    "vpnClientRootCertificates": "[variables('certObject')]"
                }
            }
        }
    ],
    "outputs":{
        "gatewayId": {
           "value": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vNetName')), '/subnets/', variables('gatewayName'))]",
           "type":"string"
        },
        "clientAddressPool":{
            "type":"string",
            "value":"[variables('clientAddressPool')]"
        },
        "certObject": {
            "type": "array",
            "value": "[variables('certObject')]"
        }
    }
}