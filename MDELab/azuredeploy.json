        },
        "parameters": {
          "name": {
            "value": "[concat(resourceGroup().name, '-nsg')]"
          },
          "location": {
            "value": "[variables('location')]"
          },
          "labTagValue": {
            "value": "[variables('labTagValue')]"
          },
          "vnetAddressRange": {
            "value": "[variables('NetworkRange')]"
          },
          "subnetName": {
            "value":"[variables('subNetName')]"
          },
          "subnetAddressRange": {
            "value": "[variables('SubnetRange')]"
          },
          "vpnAddressRange": {
            "value": "[variables('GatewayRange')]"
          }
        }
      }
    },
